<h2><%= @post.title %></h2>
<p style="white-space: pre-line"><%= @post.body %></p>
<hr/>
<p>
  <%= link_to "Editar", edit_post_path(@post), class: "btn btn-dark" %>
  <%= button_to "Borrar", post_path(@post),
                          method: :delete,
                          class: "btn btn-danger"
  %>
</p>
<hr/>
